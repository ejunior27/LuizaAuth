@page
@model Web.LuizaAuth.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="_credentials.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="_credentials.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="_credentials.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="_credentials.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="_credentials.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="_credentials.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-2">
                <a asp-page="CreateUser">Cadastrar</a>
            </div>
            <div class="col-2">
                <a asp-page="RecoveryPassword">Recuperar Senha</a>
            </div>
        </div>
    </form>
</div> 