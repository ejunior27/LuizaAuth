@page
@model Web.LuizaAuth.Pages.Account.RecoveryPasswordModel
@{
}

<span class="text-info">Uma nova senha será enviada para o e-mail cadastrado</span>
<div class="container border" style="padding:20px">    
    <br />
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="_recoveryPassword.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="_recoveryPassword.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="_recoveryPassword.Email"></span>
        </div>        
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Enviar" />
            </div>
        </div>
    </form>
</div>